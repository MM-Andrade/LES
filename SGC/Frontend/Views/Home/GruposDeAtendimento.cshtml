
@{
    ViewBag.Title = "GruposDeAtendimento";
}

<h2>GruposDeAtendimento</h2>

<div class="form-group">
    <div class="form-row">
        <div class="col-lg-10">
            <form action="~/Home/GruposDeAtendimento" method="post">
                @Html.AntiForgeryToken()
                <div class="input-group">
                    <input class="form-control" name="StrBusca" type="text" placeholder="Pesquisar..." aria-label="Pesquisar">
                    <div class="input-group-append">
                        <button class="btn btn-info" type="submit"><i class="fa fa-search"></i>Pesquisar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="table-responsive">

    <table class="table table-bordred table-hover table-striped">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Grupo de Atendimento</th>
                <th>Nome do Departamento</th>
                <th>Visualizar Grupo</th>
            </tr>
        </thead>
        @if (ViewBag.Grupos != null)
        {
            <tbody>
                @foreach (var item in ViewBag.Grupos)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.NomeGrupo</td>
                        <td>@item.Departamento.Nome</td>
                    </tr>
                }
            </tbody>
        }

    </table>
</div>