
@{
    ViewBag.Title = "Abrir novo chamado";
}

@using (Html.BeginForm("AbrirChamado", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <form>
        <div class="form-group">
            <div class="form-row bg-light">
                <div class="col-md-2">
                    @Html.ActionLink("Voltar", "Voltar", "Home", new { returnUrl = this.Request.UrlReferrer }, new { @class = "btn btn-success btn-block" })
                </div>
                <div class="col-md-8"></div>

                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary btn-block">Salvar</button>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-3">
                <label for="Nome">Nome</label>
                <input type="text" class="form-control" id="Nome" name="ticket.Usuario.Nome" value="@ViewBag.Usuario.Nome" readonly="readonly">
                <input type="hidden" id="idusuario" name="ticket.Usuario.Id" value="@ViewBag.Usuario.Id">
                <label for="Email">Email</label>
                <input type="text" class="form-control" id="Email" name="ticket.Usuario.Email" value="@ViewBag.Usuario.Email" readonly="readonly">
                <label for="Prioridade">Prioridade</label>
                <input type="text" class="form-control" id="Tipo" name="ticket.TipoServico.Prioridade.NivelPrioridade" value="@ViewBag.TipoServico.Prioridade.NivelPrioridade" readonly="readonly">
                <input type="hidden" id="IdNivelPrioridade" name="ticket.TipoServico.Prioridade.Id" value="@ViewBag.TipoServico.Prioridade.Id" />
                <label for="Horas">Horas para atendimento</label>
                <input type="text" class="form-control" id="Tipo" name="ticket.TipoServico.Prioridade.TempoAtendimento" value="@ViewBag.TipoServico.Prioridade.TempoAtendimento" readonly="readonly">

            </div>
            <div class="form-group col-md-3">
                <label for="Sobrenome">Sobrenome</label>
                <input type="text" class="form-control" id="Sobrenome" name="ticket.Usuario.Sobrenome" value="@ViewBag.Usuario.Sobrenome" readonly="readonly">
                <label for="Setor">Departamento</label>
                <input type="text" class="form-control" id="Setor" name="ticket.Usuario.GrupoAtendimento.Departamento.NomeDepartamento" value="@ViewBag.Usuario.GrupoAtendimento.Departamento.NomeDepartamento" readonly="readonly">
                <label for="Prioridade2">.</label>
                <input type="text" class="form-control" id="Prioridade2" name="ticket.TipoServico.Prioridade.DescricaoPrioridade" value="@ViewBag.TipoServico.Prioridade.DescricaoPrioridade" readonly="readonly">
            </div>

            <div class="form-group col-md-1">
            </div>
            <div class="form-group col-md-4">
                <label for="Departamento">Departamento</label>
                <input type="text" class="form-control" id="Departamento" name="ticket.TipoServico.Departamento.NomeDepartamento" value="@ViewBag.TipoServico.Departamento.NomeDepartamento" readonly="readonly">

                <label for="Tipo">Tipo</label>
                <input type="text" class="form-control" id="Tipo" name="ticket.TipoServico.NomeServico" value="@ViewBag.TipoServico.NomeServico" readonly="readonly">
                <input type="hidden" id="idTipoServico" name="ticket.TipoServico.Id" value="@ViewBag.TipoServico.Id" />
                <label for="Departamento">Departamento Responsável</label>
                <input type="text" class="form-control" id="Departamento" name="ticket.TipoServico.Departamento.NomeDepartamento" value="@ViewBag.TipoServico.Departamento.NomeDepartamento" readonly="readonly">

               

            </div>
        </div>

        <hr />
        <div class="row">
            <div class="form-group col-md-12">
                <label for="Descricao">Descrição</label>
                <textarea rows="4" class="form-control" id="Descricao" name="ticket.Descricao" required></textarea>
            </div>
        </div>

        <hr />
    </form>
}