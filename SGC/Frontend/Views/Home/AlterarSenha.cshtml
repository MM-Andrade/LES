
@{
    ViewBag.Title = "AlterarSenha";
}

<h2>Alterar senha</h2>

<hr />
<form action="/Home/AlterarSenha" method="post">
    @Html.AntiForgeryToken()
    <div class="col-sm-4">
        <label>Senha Atual</label>
        <div class="form-group">
            <input type="password" name="usuario.Senha" class="form-control" >
        </div>
        <label>Nova senha</label>
        <div class="form-group">
            <input type="password" name="usuario.NovaSenha" class="form-control" >
        </div>
        <label>Confirmar senha</label>
        <div class="form-group">
            <input type="password" name="usuario.ConfirmarSenha" class="form-control">
        </div>
    </div>
    <div class="form-group">
        <div class="form-row">

            <div class="col-md-2">
                @Html.ActionLink("Voltar", "Voltar", "Home", new { returnUrl = this.Request.UrlReferrer }, new { @class = "btn btn-success btn-block" })
            </div>

            <div class="col-md-2">
                <input type="submit" class="btn btn-primary btn-block" value="Alterar" />
            </div>

        </div>
    </div>
</form>