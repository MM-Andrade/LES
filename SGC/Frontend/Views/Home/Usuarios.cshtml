@{
    ViewBag.Title = "Usuarios";
}

    <div class="form-group">
        <div class="form-row">
            <div class="col-lg-10">
                <form action="~/Home/Usuarios" method="post">
                    @Html.AntiForgeryToken()
                    <div class="input-group">
                        <input class="form-control" name="StrBusca" type="text" placeholder="Pesquisar..." aria-label="Pesquisar">
                        <div class="input-group-append">
                            <button class="btn btn-info" type="submit"><i class="fa fa-search"></i>Pesquisar</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-lg-2">
                @Html.ActionLink("Novo Usuário", "NovoUsuario", null, new { @class = "btn icon-btn btn-primary" })
            </div>
        </div>
    </div>
    <div class="table-responsive">

        <table class="table table-bordred table-hover table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Sobrenome</th>
                    <th>Função</th>
                    <th>Departamento</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            @if (ViewBag.Usuarios != null)
            {
                <tbody>
                    @foreach (var item in ViewBag.Usuarios)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Nome</td>
                            <td>@item.Sobrenome</td>
                            <td>@item.Funcao.NomeFuncao</td>
                            <td>@item.GrupoAtendimento.Departamento.NomeDepartamento</td>

                            @*Ações*@
                            <td>@Html.ActionLink("Visualizar", "InfoUsuario", new { id = item.Id }, new { @class = "btn btn-warning" })</td>
                            <td>@Html.ActionLink("Editar", "EditarUsuario", new { id = item.Id }, new { @class = "btn btn-warning" })</td>
                        </tr>
                    }
                </tbody>
            }
            
        </table>
    </div>
